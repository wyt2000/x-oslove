{
	"name": "colive",
	"description": "A Real-time collaborative editing extension",
	"author": "oslove",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/OSH-2020/x-oslove"
	},
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onCommand:editor.action.clipboardCopyAction",
		"onCommand:colive.undo",
		"onCommand:colive.redo",
		"onCommand:itemClick",
		"onLanguage:*",
		"onView:connect"
	],
	"main": "./client/out/extension",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "colive",
					"title": "COLIVE",
					"icon": "client/src/assert/logo.svg"
				}
			]
		},
		"views": {
			"colive": [
				{
					"id": "connect",
					"name": "connect or disconnect",
					"when": ""
				}
			]
		},
		"commands": [
			{
				"command": "colive.disconnect",
				"title": "colive.disconnect"
			},
			{
				"command": "colive.connect",
				"title": "colive.connect"
			},
			{
				"command": "colive.enter",
				"title": "colive.enter"
			},
			{
				"command": "colive.undo",
				"title": "colive.undo"
			},
			{
				"command": "colive.redo",
				"title": "colive.redo"
			}
		],
		"keybindings": [
			{
				"command": "colive.undo",
				"key": "ctrl+z",
				"mac": "cmd",
				"when": "editorTextFocus"
			},
			{
				"command": "colive.redo",
				"key": "ctrl+y",
				"mac": "cmd+z",
				"when": "editorTextFocus"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"mocha": "^10.2.0",
		"@types/node": "^12.11.7",
		"eslint": "^6.4.0",
		"@typescript-eslint/parser": "^2.3.0",
		"typescript": "^3.8.3"
	},
	"dependencies": {
		"@types/socket.io-client": "^1.4.33",
		"automerge": "^0.14.1"
	}
}
